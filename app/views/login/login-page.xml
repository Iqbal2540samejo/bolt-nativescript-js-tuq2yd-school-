<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <ActionBar title="Login" />
  <StackLayout class="p-4">
    <Image src="~/assets/logo.png" width="100" height="100" class="mb-4" />
    <TextField hint="Username" text="{{ username }}" class="mb-2" />
    <TextField hint="Password" text="{{ password }}" secure="true" class="mb-4" />
    <Button text="Login" tap="{{ onLogin }}" class="-primary" />
  </StackLayout>
</Page>